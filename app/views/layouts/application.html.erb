<!DOCTYPE html>
<html>
  <head>
    <title>Kanary</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <script type="text/javascript">
      window.splashUrl = "<%= image_url("splash.jpg") %>";
      window.caret_icon = "<%= image_url('caret-down-solid.svg') %>";
      window.search_icon = "<%= image_url('search-solid.svg') %>";
      window.check_icon = "<%= image_url('check-solid.svg') %>";
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
